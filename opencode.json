{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "zai-coding-plan": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Z.AI Coding Plan",
      "env": ["ZHIPU_API_KEY", "ZAI_CODING_API_KEY"],
      "options": {
        "baseURL": "https://open.bigmodel.cn/api/paas/v4",
        "apiKey": "{env:ZHIPU_API_KEY}"
      },
      "models": {
        "glm-4.7": {
          "name": "GLM-4.7",
          "limit": {
            "context": 128000,
            "output": 16384
          }
        }
      }
    }
  }
}
