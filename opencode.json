{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "z-ai-coding": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Z.AI Coding Plan",
      "env": ["ZAI_CODING_API_KEY"],
      "options": {
        "baseURL": "https://open.bigmodel.cn/api/paas/v4"
      },
      "models": {
        "glm-4.7": {
          "name": "GLM-4.7",
          "limit": {
            "context": 128000,
            "output": 16384
          }
        }
      }
    }
  }
}
